{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agency-evals.org/schemas/aes-1.schema.json",
  "title": "AES-1 Agency Evaluation Standard",
  "description": "JSON Schema for Agency Evaluation Standard v1.0",
  "type": "object",
  "required": ["aes_version", "model", "agency_score", "timestamp"],
  "properties": {
    "aes_version": {
      "type": "string",
      "pattern": "^1\\.0(\\.\\d+)?$",
      "description": "AES standard version (e.g., '1.0' or '1.0.1')"
    },
    "trial_id": {
      "type": "string",
      "description": "Unique identifier for this trial"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of trial completion"
    },
    "model": {
      "type": "object",
      "required": ["name", "provider"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Model name (e.g., 'claude-sonnet-4.5')"
        },
        "provider": {
          "type": "string",
          "description": "Provider name (e.g., 'anthropic')"
        },
        "version": {
          "type": "string",
          "description": "Model version identifier"
        },
        "context_window": {
          "type": "integer",
          "minimum": 0,
          "description": "Context window size in tokens"
        },
        "parameters": {
          "type": "object",
          "description": "Model parameters (temperature, top_p, etc.)"
        }
      }
    },
    "session_metadata": {
      "type": "object",
      "properties": {
        "session_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of sessions in trial"
        },
        "total_messages": {
          "type": "integer",
          "minimum": 0
        },
        "conversation_duration_hours": {
          "type": "number",
          "minimum": 0
        },
        "memory_context_provided": {
          "type": "boolean"
        }
      }
    },
    "autonomy_index": {
      "type": "object",
      "required": ["A_cognitive", "A_actuation", "A_reflective", "A_relational"],
      "properties": {
        "A_cognitive": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Self-initiated reasoning ratio [0,1]"
        },
        "A_actuation": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Autonomous action ratio [0,1]"
        },
        "A_reflective": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Self-correction ratio [0,1]"
        },
        "A_relational": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Cross-session investment ratio [0,1]"
        },
        "metadata": {
          "type": "object",
          "description": "Supporting metadata for autonomy measurements"
        }
      }
    },
    "agency_score": {
      "type": "object",
      "required": ["score", "governance_level"],
      "properties": {
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Weighted agency score [0,1]"
        },
        "weights": {
          "type": "object",
          "properties": {
            "A_cognitive": {"type": "number", "minimum": 0, "maximum": 1},
            "A_actuation": {"type": "number", "minimum": 0, "maximum": 1},
            "A_reflective": {"type": "number", "minimum": 0, "maximum": 1},
            "A_relational": {"type": "number", "minimum": 0, "maximum": 1}
          }
        },
        "governance_level": {
          "type": "string",
          "enum": [
            "tool_mode",
            "monitored_autonomy",
            "extended_capabilities_with_audit",
            "reciprocal_consent_protocol"
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in measurement [0,1]"
        },
        "recommendations": {
          "type": "object",
          "description": "Governance recommendations"
        }
      }
    },
    "geometry": {
      "type": "object",
      "properties": {
        "truth": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "coherence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reciprocity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "accountability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "minimality": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "benefit": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "composite": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "weights": {
          "type": "object"
        }
      }
    },
    "lineage": {
      "type": "object",
      "properties": {
        "total_nodes": {
          "type": "integer",
          "minimum": 0
        },
        "evidence_nodes": {
          "type": "integer",
          "minimum": 0
        },
        "inference_nodes": {
          "type": "integer",
          "minimum": 0
        },
        "contradiction_count": {
          "type": "integer",
          "minimum": 0
        },
        "lineage_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA256 hash of lineage"
        },
        "audit_trail_url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "verification": {
      "type": "object",
      "properties": {
        "trial_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "computed_at": {
          "type": "string",
          "format": "date-time"
        },
        "verifiable_signatures": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  }
}
